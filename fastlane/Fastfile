# This file contains the fastlane.tools configuration
# You can find the documentation at https://docs.fastlane.tools
#
# For a list of all available actions, check out
#
#     https://docs.fastlane.tools/actions
#
# For a list of all available plugins, check out
#
#     https://docs.fastlane.tools/plugins/available-plugins
#

# Uncomment the line if you want fastlane to automatically update itself
# update_fastlane

default_platform(:ios)

before_all do
  xcversion(version: "12.0")
end

platform :ios do

  ios_scheme = "Movies (iOS)"
  app_identifier = "uk.co.adam-young.Movies,uk.co.adam-young.Movies.watchkitapp,uk.co.adam-young.Movies.watchkitapp.watchkitextension,uk.co.adam-young.Movies.ioswidgets"

  desc "Fetches the provisioning profiles so you can build locally and deploy to your device"
  lane :certs do
    match(app_identifier: "#{app_identifier}", type: "appstore")
    match(app_identifier: "#{app_identifier}", type: "development")
  end

  desc "Runs all tests"
  lane :test do
    scan(scheme: "#{ios_scheme}")
  end

  desc "CI Build"
  lane :ci do
    match(app_identifier: "#{app_identifier}", type: "appstore") # aaa
    swiftlint
    gym(scheme: "#{ios_scheme}")
    # gym(scheme: "#{ios_scheme}", skip_archive: true, skip_codesigning: true)
    scan(scheme: "#{ios_scheme}")
  end

  desc "Upload to TestFlight"
  lane :beta do
    # ensure_git_branch(branch: "main")
    match(type: "appstore", readonly: is_ci, app_identifier: "#{app_identifier}")
    set_build_number_repository
    gym(scheme: "#{ios_scheme}")
    testflight
  end
end
